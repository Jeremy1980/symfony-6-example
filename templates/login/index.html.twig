{% extends 'base.html.twig' %}

{% block title %}Autoryzacja{% endblock %}

{% block body %}
    <main class="container my-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="row g-3">
            <fieldset class="col col-lg-6 mx-auto">
                <label for="username" class="form-label">E-mail:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control border bg-light">

                <label for="password" class="form-label">Has≈Ço:</label>
                <input type="password" id="password" name="_password" class="form-control border bg-light">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/lista" class="form-control"> #}

                <button type="submit" class="btn btn-primary">Zaloguj</button>
            </fieldset>
        </form>
    </main>
{% endblock %}